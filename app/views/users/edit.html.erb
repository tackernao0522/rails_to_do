<div class="usereditPage">
  <div class="container">
    <h2>プロフィール編集</h2>
    <%= form_with model: @user, html: { class: 'usereditForm' },local:true do |f| %>
      <% if @user.errors.any? %>
      <p class="text-danger">お名前は20文字以内で入力してください</p>
      <% end %>
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control userName", placeholder:"お名前"%>
      <div class="text-center"><%= f.submit "変更を保存する", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>